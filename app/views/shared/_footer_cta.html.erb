<% if user_signed_in? %>
  <div class="rounded-md p-8 hidden lg:block">
    <h3 class="text-3xl font-bold text-gray-700 dark:text-gray-200">Have a question?</h2>
    <p class="py-3 text-gray-500 dark:text-gray-400 text-md w-96">Chat with us!</p>

    <%= link_to "mailto:mailto:anagement@grassroot.academy", class: 'button button--dark text-base px-14' do %>
      Open Gmail
    <% end %>
  </div>
<% else %>
  <div class="px-8 pt-2 bg-white dark:bg-gray-800 hidden lg:flex flex-col justify-center">
    <h3 class="text-2xl font-semibold pb-6">Start learning for free</h3>

    <%= form_with url: sign_up_path, method: :get do |form| %>
      <div class="dark-form-input p-1 flex rounded-md bg-white dark:bg-gray-800 focus-within:ring-2 focus-within:ring-indigo-500 dark:focus-within:ring-gray-500 border border-gray-300 dark:border-gray-500">
        <%= form.email_field :email, placeholder: 'Email Address', required: true, class: 'bg-white border-none dark:bg-gray-800 dark:placeholder-gray-400 focus:ring-0 w-60 p-2 focus:outline-none block rounded-none lg:w-80 lg:text-md rounded-l-md' %>
        <%= form.submit 'Get Started!', class: 'button button--primary py-2' %>
      </div>
    <% end %>
  </div>
<% end %>
